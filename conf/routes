# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# An example controller showing how to use slick
POST    /scope                      controllers.ScopeController.addScope
GET     /scopes                     controllers.ScopeController.getScopes

# parametric geometry engine demonstration
POST    /shell                      services.api.v1.BrepController.createShell
GET     /parametricshell/:id        services.api.v1.BrepController.getParametricShell(id)
POST    /parametricshell            services.api.v1.BrepController.createParametricShell
PUT     /parametricshell/:id        services.api.v1.BrepController.editParametricShell(id)

# parametric script
GET     /templatescript/:id         services.api.v1.ParamScriptController.getParamTemplateScript(id)

# system monitoring
GET     /                           services.api.v1.SystemController.dashboard

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
